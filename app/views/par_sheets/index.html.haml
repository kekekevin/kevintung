%h1 Par Sheets 

%p
  %ul
    %li
      = link_to 'Add a new Par Sheet', new_par_sheet_path
  %table
    %thead
      %tr
        %th ID
        %th Name
        
    %tbody
      - @par_sheets.each do |sheet|
        %tr
          %td 
            %a
              = link_to sheet.id, par_sheet_path(sheet)
          %td 
            = sheet.name
          %td
            = link_to 'Edit', edit_par_sheet_path(sheet)
            = link_to 'Delete', par_sheet_path(sheet), method: :delete
